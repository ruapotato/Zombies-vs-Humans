[sub_resource type="GDScript" id="GDScript_hit"]
script/source = "extends Node3D
## Small spark/sphere effect for body hits

func _ready() -> void:
	var mesh: MeshInstance3D = $Mesh

	# Duplicate material so we can animate it independently
	var base_material: StandardMaterial3D = mesh.get_surface_override_material(0)
	var material := base_material.duplicate() as StandardMaterial3D
	mesh.set_surface_override_material(0, material)

	# Create tween for fade out animation
	var tween := create_tween()
	tween.set_parallel(true)

	# Scale up slightly then down
	tween.tween_property(mesh, \"scale\", Vector3(1.5, 1.5, 1.5), 0.1)
	tween.chain().tween_property(mesh, \"scale\", Vector3(0.1, 0.1, 0.1), 0.2)

	# Fade out the material
	tween.tween_property(material, \"albedo_color:a\", 0.0, 0.3)

	# Clean up after animation
	tween.chain().tween_callback(queue_free)
"

